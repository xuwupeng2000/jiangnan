<section class="container">
  <div class="col-lg-12 col-sm-12">
    <h2>Jack Wu's Demo Blog</h2>
    <div class="nag">
      <small>* This is really just for demo Authentication and Authorization. It does not have much features to offer yet.</small>
    </div>

    <div class="post-new">
      <%= link_to "New Post", new_post_path %>
    </div>
    <div class="all-posts">
      <% @posts.each do |post| %>

      <div class="post-entry">

        <div clss="row post-bar">
          <div class="post-title col-lg-6 col-sm-12"> <h4><%= post.title %></h4> </div>

          <div class="post-actions col-lg-6 col-sm-12">
            <div>
              <% if current_user && policy(:post).edit? %>
                <%= link_to 'Edit', edit_post_path(post) %>
                <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="post-content row">
          <div class="col-lg-12 col-sm-12"> <%= post.content %> </div>
        </div>
      </div>

      <% end %>
    </div>

  </div>
</section>
